<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.8.0//EN"
        "http://gwtproject.org/doctype/2.8.0/gwt-module.dtd">
<module rename-to="Attestation">

    <source path=""/>
    <public path="public"/>
    <!-- Inherit the core Web Toolkit stuff.                  -->
    <inherits name='com.google.gwt.user.User'/>
    <inherits name='com.google.gwt.core.Core'/>
    <inherits name='elemental2.promise.Promise'/>

    <!-- Specify the app entry point class.                   -->
    <entry-point class='ch.unifr.digits.webprotege.attestation.module.AttestationModule'/>
    <define-property name="attestation.injectjs" values="true, false"/>
    <set-property name="attestation.injectjs" value="true"/>

    <replace-with class="ch.unifr.digits.webprotege.attestation.module.ScriptLoader.InjectingLoader">
        <all>
            <when-type-is class="ch.unifr.digits.webprotege.attestation.module.ScriptLoader"/>
            <when-property-is name="attestation.injectjs" value="true"/>
        </all>
    </replace-with>

</module>
